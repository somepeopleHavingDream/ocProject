<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
							http://www.springframework.org/schema/beans/spring-beans.xsd">
							
	<!-- 会话Cookie模板 -->
	<bean id="sessionIdCookie" class="org.apache.shiro.web.servlet.SimpleCookie">
		<constructor-arg value="sid"></constructor-arg>
		<property name="httpOnly" value="true"></property>
		<property name="maxAge" value="-1"></property>
	</bean>
	
	<!-- remember Cookie -->
	<bean id="rememberMeCookie" class="org.apache.shiro.web.servlet.SimpleCookie">
		<constructor-arg value="rememberMe"></constructor-arg>
		<property name="path" value="/"></property>
		<property name="domain" value="onlinecollege.com"></property>
		<property name="httpOnly" value="true"></property>
		<!-- 30天 -->
		<property name="maxAge" value="2592000"></property>
	</bean>
	
	<bean id="rememberMeManager" class="org.apache.shiro.web.mgt.CookieRememberMeManager">
		<property name="cipherKey" value="#{T(org.apache.shiro.codec.Base64).decode('4AvVhmFLUs0KTA3Kprsdag==')}"/>  
     	<property name="cookie" ref="rememberMeCookie"/>
	</bean>
	
	<!-- 自定义Realm -->
	<bean id="authRealm" class="com.online.college.web.auth.AuthRealm"></bean>
	
	<!-- 保存在内存 -->
	<bean id="securityManager" class="org.apache.shiro.web.mgt.DefaultWebSecurityManager">
		<property name="realm" ref="authRealm"></property>
		<property name="rememberMeManager" ref="rememberMeManager"></property>
	</bean>
	
	<bean id="lifecycleBeanPostProcessor" class="org.apache.shiro.spring.LifecycleBeanPostProcessor"></bean>
	
	<!-- filter -->
	<bean id="authFilter" class="com.online.college.web.auth.AuthFilter"></bean>
	
	<bean id="shiroFilter" class="org.apache.shiro.spring.web.ShiroFilterFactoryBean">
		<property name="securityManager" ref="securityManager"></property>
		<property name="unauthorizedUrl" ref="/error/403.html"></property>
		<property name="successUrl" value="/"></property>
		<property name="loginUrl" value="/auth/login.html"></property>
		<property name="filters">
			<map>
				<entry key="authc" value-ref="authFilter"></entry>
			</map>
		</property>
		<property name="filterChainDefinitions">
			<value>
				/error/**=anon
				/res/**=anon
				/tools/**=anon
				/index.html*=anon
				/auth/login.html*=anon
				/auth/doLogin.html*=anon
				/auth/register.html*=anon
				/auth/doRegister.html*=anon
				/auth/logout.html=logout
				/**=authc
			</value>
		</property>
	</bean>